<div class="box">
  <div class="box-header">
    <h3 class="box-title">Clients</h3>
    <div class="input-group input-group-sm" style="width: 150px;">
      <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
      <div class="input-group-btn">
        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
      </div>
    </div>
  </div> <!-- /.box-header -->

  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Address</th>
          <th>Zip</th>
          <th>City</th>
          <th>Phone1</th>
          <!--<th>Phone2</th>-->
          <th>Email</th>
          <!--<th>Website</th>-->
          <!--<th>Clienttype</th>-->
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @clients.each do |client| %>
          <tr  data-link="<%= client_path(client) %>">
            <td><%= client.id %></td>
            <td><%= client.name %></td>
            <td><%= client.address %></td>
            <td><%= client.zip %></td>
            <td><%= client.city %></td>
            <td><%= client.phone1 %></td>
            <!--<td><%= client.phone2 %></td>-->
            <td><a href="mailto:<%= client.email %>"><%= client.email %></a></td>
            <!--<td><%= client.website %></td>-->
            <!--<td><%= client.clienttype.text %></td>-->
            <td style='text-align:right;' data-nolink>
              <%= link_to '<i class="fa fa-eye"></i>'.html_safe, client %>&nbsp;
              <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_client_path(client) %>&nbsp;
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe,
                client, 
                method: :delete, 
                data: {confirm_swal: "Are you sure?"} 
              %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- /.box-body -->

</div> <!-- /.box -->
 
